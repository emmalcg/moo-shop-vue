html { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;}

*, *:before, *:after {box-sizing: inherit}

.sr-only { position: absolute; width: 1px; height: 1px; margin: -1px; border: 0; padding: 0; white-space: nowrap; clip-path: inset(100%); clip: rect(0 0 0 0); overflow: hidden;}

:root {
    --logo-font: 'futura-pt-bold', sans-serif;
    --body-font: 'futura-pt', sans-serif;
    --body-font-size: 1.6rem;

    --text-color: black;
    --light-color: #B2E2BF;
    --bright-color: #1292FF;

    --line-global: 2rem;
    --gutter-global: var(--line-global);
    --offset-global: calc(var(--line-global)* 2);

    --background-transition: background 0.4s ease;
}

html {
    font-size: 62.5%;
    line-height: 1.25;
}

body {
    font-size: var(--body-font-size);
    font-family: var(--body-font);
    -webkit-font-smoothing: antialiased;
}

main {
  padding-top: 8rem;
}

a {
    text-decoration: none;
    color: var(--text-color);
}

li {
    list-style-type: none;
}

button, 
input,
option,
textarea {
  margin: 0;
  padding: 0;
  border: none;
  appearance: none;
  box-shadow: none;
  background-color: transparent;
  outline: none;
  color: var(--text-color);
  font-family: var(--body-font);
}

.wrapper {
    max-width: 1400px;
    width: 90%;
    margin: 0 auto;
}

::selection {
  background-color: var(--text-color);
  color: white;
}

/* PRESETS */
.flex {
  display: flex;
}

.space-between {
  justify-content: space-between;
}

.column {
  flex-direction: column;
}

.half {
  width: 50%;
}

/* header styles */
header {
  height: 8rem;
  border-bottom: 1px solid var(--text-color);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: white;
  z-index: 10;
  padding-top: 1rem;
}

h1 {
  padding: 1rem 0;
  margin: 0;
}


nav.header-nav {
  width: 50%;
}

ul.header-menu li {
  padding: 0 1rem;
  margin: 0 0.5rem;
  font-size: 2rem;
}

.cart-button-container {
  /* padding: 0; */
  position: relative; 
}

.cart-button {
  position: relative; 
  border: none;
  background-color: transparent;
  width: 6rem;
}

.cart-button:hover .cart-item-count, 
.cart-button:focus .cart-item-count {
  background-color: var(--light-color);
} 

.cart-item-count {
  position: absolute;
  top: 1.1rem;
  left: 2.3rem;
  border: 1px solid var(--text-color);
  padding: 0.2rem 0.7rem;
  border-radius: 50%;
  background: white;
  transition: var(--background-transition);
}

/* START MOBILE NAV */

.header-mobile {
  height: 7.2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--text-color);
  display: none;
}

.mobile-nav {
  position: fixed;
  bottom: 2.5rem;
  left: 0;
  right: 0;
  padding: 0 2.5rem;
  z-index: 10;
  display: flex;
  justify-content: space-between;
}

.mobile-nav-button {
  border: 1px solid var(--text-color);
  padding: 1rem;
  border-radius: 2.5rem;
  background: white;
  z-index: 10;
}
/* COLLECTION */

.collection-list {
  flex-wrap: wrap;
}

.collection-title {
  padding: 3rem 0;
  font-size: 2.4rem;
  margin: 0 0 2rem 0;
  border-bottom: 1px solid var(--text-color);
  text-align: center;
  line-height: 1.2rem;

  background: linear-gradient(
    110.78deg,
    #76e650 -1.13%,
    #f9d649 15.22%,
    #f08e35 32.09%,
    #ec5157 48.96%,
    #ff18bd 67.94%,
    #1a4bff 85.34%,
    #62d8f9 99.57%
  );

  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* PRODUCT CARD */

.product-card {
  width: calc((85% - 2.5rem * 2) / 3);
  margin-bottom: 2rem;
  height: 100%;
}

.product-image-wrapper {
  padding-top: 120%;
  display: block;
  overflow: hidden;
  position: relative;
  margin-bottom: 2rem;
}

.swiper-container {
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.swiper-slide {
  display: flex;
  justify-content: start;
  align-items: center;
  position: relative;
  user-select: none;
}

.swiper-slide img {
  width: 100%;
  height: 100%;
  outline-style: none;
  box-shadow: none;
  border-color: transparent;
  object-fit: cover;
}

.swiper-button-prev {
  cursor: url('{{ "arrow-left.svg" | asset_url }}') 15 8, auto;
}

.swiper-button-next {
  cursor: url('{{ "arrow-right.svg" | asset_url }}') 15 8, auto;
}

.swiper-button-prev, 
.swiper-button-next {
  position: absolute;
  top: 0;
  width: 25%;
  height: 100%;
  margin-top: 0;
  outline-style: none;
  box-shadow: none;
}

.swiper-button-prev::after, 
.swiper-button-next::after {
  content: none;
}

.product-card-title {
  position: relative;
  margin: 1.6rem 0;
}

.product-card-title h3 {
  padding-right: 2rem;
}

.product-card-title .add-button {
  width: 2rem;
  height: 2rem;
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 50%;
}

.product-card-title .add-button::before {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid var(--text-color);
  border-radius: inherit;
}

.product-card-title .plus::after,
.product-card-title .plus::before {
  content: "";
  width: 0.8rem;
  height: 0.2rem;
  position: absolute;
  top: 0.9rem;
  left: 0.6rem;
  background: currentColor;
}

.product-card-title .plus::before {
  transform: rotate(90deg);
}

.product-card-title:hover .add-button {
  color: white;
  background-color: var(--text-color);
}

.product-card-size {
  display: none;
}

.product-card-title:hover .product-card-price {
  display: none;
}

.product-card-title:hover .product-card-size {
  display: block;
}

/* individual product page */

.product-template {
  padding-top: 2.4rem;
  display: grid;
  grid-template-columns: calc((100% - 2.5rem) / 2) calc((100% - 2.5rem) / 2);
}

.product-description-container h2 {
  margin-bottom: 8rem;
  font-size: 2.6rem;
  text-transform: uppercase;
}

.product-description {
  width: 50%;
  margin-bottom: 3rem;
}

.swiper-container-product-page {
  overflow: hidden;
  width: 100%;
  height: 100%;
}

.product-template {
  padding-top: 2.5rem;
  display: grid;
  grid-template-columns: calc((100% - 2.5rem) / 2) calc((100% - 2.5rem) / 2);
  justify-content: space-between;
  margin-bottom: 3.2rem;
}

.product-template .swiper-button-next::before {
  background: url('{{ "arrow-right.svg" | asset_url }}') 2.4rem center no-repeat;
  content: "";
  opacity: 0.25;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transition: opacity 0.15s;
  background-position: calc(100% - 3rem);
}

.product-template .swiper-button-prev::before {
  background: url('{{ "arrow-left.svg" | asset_url }}') 2.4rem center no-repeat;
  content: "";
  opacity: 0.25;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transition: opacity 0.3s ease-in-out;
}

.product-image:hover .swiper-button-prev::before,
.product-image:hover .swiper-button-next::before {
  opacity: 0;
}

.add-to-cart-button {
  text-transform: uppercase;
  background: transparent;
  padding: 0.5rem 1rem;
  border: 1px solid var(--text-color);
  margin-top: 5rem;
  transition: all 0.3s ease-in-out;
}

.add-to-cart-button:hover,
.add-to-cart-button:focus {
  background: var(--text-color);
  color: white;
}

/* mini cart */

.mini-cart.hidden {
  transform: translateX(100%);
}

.mini-cart.hidden .mini-cart-close {
  opacity: 0;
}

.mini-cart-close {
  cursor: pointer;
  position: absolute;
  top: 2.5rem;
  left: 2.5rem;
  right: auto;
  color: inherit;
  transition: opacity 0.5s 0.1s, padding 0.15s;
}

.mini-cart.hidden::before {
  opacity: 0;
}

.mini-cart {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  height: 100vh;
  width: 100%;
  z-index: 99;
  max-width: 35rem;
  background-color: white;
  padding: 7.2rem 2.5rem 2.5rem;
  transition-property: transform;
}

.mini-cart::before {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  box-shadow: 0 0.4rem 4.8rem 3.6rem rgba(0,0,0,0.25);
  -webkit-box-shadow: 0 0.4rem 4.8rem 3.6rem rgba(0,0,0,0.25);
  -moz-box-shadow: 0 0.4rem 4.8rem 3.6rem rgba(0,0,0,0.25);
  transition-property: opacity;
  z-index: -1;
}

.mini-cart, 
.mini-cart::before {
  transition-duration: 1s;
  transition-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1);
}

.cart-form {
  height: 100%;
}

.cart-button {
  cursor: pointer;
  position: relative;
  transition: 0.3s;
  z-index: 100;
}

.mini-cart-image-wrapper {
  width: 14rem;
  margin-right: 2.5rem;
}

.mini-cart-image-wrapper img {
  width: 100%
}

.mini-cart-rows {
  border-top: 1px solid var(--text-color);
  border-bottom: 1px solid var(--text-color);
  height: 100%;
  overflow: auto;
}

.mini-cart-item {
  display: flex;
  padding: 2.5rem 0;
}

.mini-cart-item-right {
  flex: 1;
}

.mini-cart-item-quantity {
  height: 2.5rem;
  overflow: hidden;
  margin-top: 2.5rem;
  position: relative;
  border: 1px solid var(--text-color);
  border-radius: 1.3rem;
}

.mini-cart-item-quantity input {
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 2.5rem;
  cursor: auto;
}

.mini-cart-quantity-button {
  width: 2.5rem;
  position: absolute;
  top: -0.4rem;
  bottom: 0;
  left: 0;
  cursor: pointer;
}

.mini-cart-quantity-button:last-of-type {
  left: auto;
  right: 0;
}

.checkout-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 5rem;
  border-radius: 2.5rem;
  padding: 0 2.5rem;
  position: relative;
  transition: 0.3s;
  padding-bottom: 0.1rem;
  background: var(--text-color);
  color: white;
}

.checkout-button:hover {
  opacity: 0.85;
}

.checkout-subtotal {
  display: flex;
  justify-content: space-between;
  height: 7.2rem;
  padding: 0 2.5rem;
  line-height: 7.2rem;
}

.outside {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}

/* menu drawer */

.menu-drawer {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  height: 100vh;
  width: 100%;
  z-index: 99;
  max-width: 35rem;
  background: white;
  padding: 7.2rem 2.5rem 2.5rem;
  transition: transform 0.9s cubic-bezier(0.165, 0.84, 0.44, 1), left 0.5s 0s;
}

.menu-drawer::before {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  box-shadow: 0.1rem 0.3rem 7.7rem 3.7rem rgba(0,0,0,0.25);
  -webkit-box-shadow: 0.1rem 0.3rem 7.7rem 3.7rem rgba(0,0,0,0.25);
  -moz-box-shadow: 0.1rem 0.3rem 7.7rem 3.7rem rgba(0,0,0,0.25);
  transition-property: opacity;
  z-index: -1;
}

.menu-drawer.hidden::before {
  opacity: 0;
}

.menu-drawer.hidden {
  transform: translateX(-100%);
}

.menu-drawer-inner {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.menu-button {
  display: none;
  z-index: 999;
}

/*footer */
footer {
  border-top: 1px solid var(--text-color);
  padding-bottom: 1rem;
}

@media (hover: hover) and (pointer: fine) {
  .footer-menu a {
    transition: color 0.5s;
  }

  .footer-menu ul:hover a {
    color: #9a9a9a;
  }

  .footer-menu li a:hover {
    color: var(--text-color);
  }
}
/* Media queries */
@media (max-width: 1200px) {
  
}

@media (max-width: 900px) {
  .menu-button {
    display: block;
  }
  .header-nav {
    display: none;
  }
  h1 {
    position: absolute;
    left: 50%;
    transform: translate(-50%);
  }
}

@media (max-width: 599px) {
  .wrapper {
    margin-top: 3rem;
    width: 96%;
  }

  .header-inner {
    display: none;
  }

  main {
    padding-top: 0;
  }

  .swiper-button-prev,
  .swiper-button-next {
    display: none;
  }

  .product-template {
    display: flex;
    flex-direction: column;
  }

  .product-template .product-image{
    width: 45%;
    height: auto;
    margin: auto;
  }

  .product-template .product-description-container {
    margin: auto;
  }
  .product-description-container h2 {
    text-align: center;
    margin-bottom: 0.5rem;
  }
  .product-description-container p {
    text-align: center;
    margin: 1.5rem;
  }
  .product-bottom button {
    margin-top: 0.5rem;
  }

  .menu-drawer {
    position: fixed;
    width: calc(100vw - 5rem);
  }

  .mini-cart {
    position: fixed;
    width: calc(100vw - 5rem);
    height: 100%;
    overflow-x: hidden;
  }

  header {
    height: auto;
    border-bottom: none;
  }

  .header-mobile {
    display: flex;
    height: auto;
  }

  .header-mobile a {
    margin: 0rem auto 1rem;
    font-size: 2rem;
  }

  .product-card {
    width: 80%;
    margin: 1.5rem auto;
  }
}


